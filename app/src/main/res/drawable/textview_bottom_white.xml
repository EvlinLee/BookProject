<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/main" />
        </shape>
    </item>

    <item
        android:left="15dp"
        android:right="15dp">
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>

    <item android:bottom="2dp">
        <shape>
            <solid android:color="@color/main" />
        </shape>
    </item>

</layer-list>