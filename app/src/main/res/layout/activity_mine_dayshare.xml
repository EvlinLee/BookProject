<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_middle_12"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dayshare_one" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small_8"
                android:src="@drawable/dayshare_two" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_middle_12"
            android:layout_marginTop="@dimen/margin_middle_12"
            android:gravity="center"
            android:text="进入书籍详情页或阅读页，点击分享按钮，完成分享"
            android:textColor="@color/text_color_black_2"
            android:textSize="@dimen/textSize_s_12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_middle_12"
            android:layout_marginTop="@dimen/margin_middle_12"
            android:background="@drawable/textview_left_main"
            android:paddingLeft="@dimen/margin_middle_12"
            android:text="最近阅读书籍"
            android:textColor="@color/text_color_black_1" />

        <com.zhangwan.app.recyclerview.RecyclerView
            android:id="@+id/rv_dayshare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
