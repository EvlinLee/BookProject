<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:background="@drawable/dialog_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_medium_16"
            android:text="更改性别"
            android:textColor="@color/text_color_black_1"
            android:textSize="@dimen/textSize_l_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/margin_medium_16"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_modifysex_man"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_modifysex_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/man_normal"
                    android:drawablePadding="@dimen/margin_tiny_4"
                    android:gravity="center"
                    android:text="汉子"
                    android:textColor="@color/text_color_black_1"
                    android:textSize="@dimen/textSize_s_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_modifysex_girl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_modifysex_girl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/girl__normal"
                    android:drawablePadding="@dimen/margin_tiny_4"
                    android:gravity="center"
                    android:text="妹子"
                    android:textColor="@color/text_color_black_1"
                    android:textSize="@dimen/textSize_s_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_modifysex_species"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_modifysex_species"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/species__normal"
                    android:drawablePadding="@dimen/margin_tiny_4"
                    android:gravity="center"
                    android:text="新物种"
                    android:textColor="@color/text_color_black_1"
                    android:textSize="@dimen/textSize_s_12" />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/item_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_modifsex_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textSize="@dimen/textSize_m_14" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/divide_line" />

            <TextView
                android:id="@+id/tv_modifsex_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/colorPrimary_04"
                android:textSize="@dimen/textSize_m_14" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
