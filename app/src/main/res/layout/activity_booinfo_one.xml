<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_bookinfo_topbg"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/ll_bookinfo_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:orientation="horizontal"
        android:padding="@dimen/margin_middle_12">

        <ImageView
            android:id="@+id/iv_bookdetail_img"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:background="@color/white"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_tiny_4">

            <TextView
                android:id="@+id/tv_bookdetail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:text="绝世兵王" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tiny_4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bookdetail_auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="作者："
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_bookdetail_autoname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="辰东"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tiny_4"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bookdetail_state1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类型："
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_bookdetail_type2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="都市"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <View
                    android:layout_width="2px"
                    android:layout_height="10dp"
                    android:layout_marginLeft="@dimen/margin_tiny_4"
                    android:layout_marginRight="@dimen/margin_tiny_4"
                    android:background="@color/divide_line" />

                <TextView
                    android:id="@+id/tv_bookdetail_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="连载中"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_bookdetail_readnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tiny_4"
                android:text="已有9999书友阅读"
                android:textColor="@color/white"
                android:textSize="@dimen/margin_middle_12" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
