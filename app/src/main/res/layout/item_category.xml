<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_category_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/category_tv_chapter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:drawableLeft="@drawable/selector_category_unload"
            android:drawablePadding="@dimen/margin_10"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/margin_middle_12"
            android:text="1.第一章 八十大寿"
            android:textColor="@color/read_chatper_textcolor_2"
            android:textSize="@dimen/textSize_m_14" />

        <TextView
            android:id="@+id/category_tv_free"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_small_8"
            android:gravity="center"
            android:text="免费"
            android:textColor="@color/read_chatper_textcolor"
            android:textSize="@dimen/textSize_s_12"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_item_chatper_lock"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_small_8"
            android:src="@drawable/icon_chatper_suo"
            android:textColor="@color/read_chatper_textcolor"
            android:textSize="@dimen/textSize_s_12"
            android:visibility="gone" />
    </LinearLayout>

    <View style="@style/item_line" />
</LinearLayout>