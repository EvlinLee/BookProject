<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    xmlns:tool="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_bookimg"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        tools:background="@color/colorPrimary_04"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_bookimg"
        android:textColor="@color/text_color_333333"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_alignTop="@+id/iv_bookimg"
        android:textSize="@dimen/textSize_m"
        android:text="风行前六" />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title"
        android:layout_below="@+id/title"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_toRightOf="@+id/iv_bookimg"
        android:textColor="@color/main"
        android:textSize="@dimen/textSize_m"
        tools:text="西边" />

    <TextView
        android:id="@+id/read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_tiny_4"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_green_without_solid_selector"
        android:textColor="@color/main"
        android:textSize="@dimen/textSize_m"
        android:text="立即阅读" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title"
        android:layout_below="@+id/author"
        android:layout_toRightOf="@+id/iv_bookimg"
        android:textSize="@dimen/textSize_s"
        android:maxLines="2"
        android:layout_alignRight="@+id/read"
        android:lineSpacingMultiplier="1.1"
        android:ellipsize="end"
        android:layout_marginBottom="@dimen/margin_10"
        android:text="风行前六风行前六风行前六风行前六风行前六风行前六风行前六风行前六风行前六前六风行前六风行前六风行前六风行前六前六风行前六风行前六风行前六风行前六" />

    <View
        style="@style/item_line"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
