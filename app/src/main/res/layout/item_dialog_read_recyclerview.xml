<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_big_100"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_item_dialog_read"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_middle_12"
        android:background="@drawable/shape_read_dialog_recyclerview">

        <TextView
            android:id="@+id/tv_item_dialog_read_recyclerview_iscount"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_read_dialog_iscount"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_m_14"
            android:visibility="gone"
            tools:text="送16%" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/margin_small_8">

            <TextView
                android:id="@+id/tv_item_dialog_read_recyclerview_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_black_2"
                android:textSize="@dimen/textSize_xl_18"
                tools:text="30元" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_dialog_read_recyclerview_banal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_m_14"
                    android:textColor="@color/text_color_black_2"
                    tools:text="300+" />

                <TextView
                    android:id="@+id/tv_item_dialog_read_recyclerview_give"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_yellow"
                    android:textSize="@dimen/textSize_m_14"
                    tools:text="888阅读币" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>