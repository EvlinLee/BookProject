<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="通过以下方式"
            android:textColor="#353535" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="邀请好友让您拿更多书币"
            android:textColor="@color/text_color_d8d8d8" />

        <View style="@style/item_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.zhangwan.app.widget.SquareRelativeLayout
                android:id="@+id/sr_invite_wechat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/friend_wechat"
                    android:gravity="center"
                    android:text="微信"
                    android:textColor="@color/text_color_black_2" />
            </com.zhangwan.app.widget.SquareRelativeLayout>


            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/divide_line" />

            <com.zhangwan.app.widget.SquareRelativeLayout
                android:id="@+id/sr_invite_wczone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/friend_wczone"
                    android:gravity="center"
                    android:text="朋友圈"
                    android:textColor="@color/text_color_black_2" />
            </com.zhangwan.app.widget.SquareRelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/divide_line" />

            <com.zhangwan.app.widget.SquareRelativeLayout
                android:id="@+id/sr_invite_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/friend_two"
                    android:gravity="center"
                    android:text="扫一扫邀请"
                    android:textColor="@color/text_color_black_2" />
            </com.zhangwan.app.widget.SquareRelativeLayout>
        </LinearLayout>

        <View style="@style/item_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.zhangwan.app.widget.SquareRelativeLayout
                android:id="@+id/sr_invite_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/friend_qq"
                    android:gravity="center"
                    android:text="QQ"
                    android:textColor="@color/text_color_black_2" />
            </com.zhangwan.app.widget.SquareRelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/divide_line" />

            <com.zhangwan.app.widget.SquareRelativeLayout
                android:id="@+id/sr_invite_qzone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/friend_qzone"
                    android:gravity="center"
                    android:text="QQ空间"
                    android:textColor="@color/text_color_black_2" />
            </com.zhangwan.app.widget.SquareRelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/divide_line" />

            <com.zhangwan.app.widget.SquareRelativeLayout
                android:id="@+id/sr_invite_website"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/friend_website"
                    android:gravity="center"
                    android:text="复制链接"
                    android:textColor="@color/text_color_black_2" />
            </com.zhangwan.app.widget.SquareRelativeLayout>
        </LinearLayout>

        <View style="@style/item_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="奖励规则："
            android:textColor="#353535" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.好友激活"
                android:textColor="@color/text_color_d8d8d8"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="奖2书券"
                android:textColor="@color/red_82p"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.好友每日阅读超过三十分钟（同一好友累计5次）"
                android:textColor="@color/text_color_d8d8d8"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="奖2书券*5"
                android:textColor="@color/red_82p"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.好友充值奖励"
                android:textColor="@color/text_color_d8d8d8"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="奖充值金额5%书券"
                android:textColor="@color/red_82p"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="邀请规则："
            android:textColor="#353535" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="1.一个手机用户只能被邀请一次"
            android:textColor="@color/text_color_d8d8d8"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="2.被邀请人安装后需要登录才算邀请成功"
            android:textColor="@color/text_color_d8d8d8"
            android:textSize="12sp" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
