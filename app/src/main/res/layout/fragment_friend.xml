<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium_16"
        android:background="@drawable/friend_top_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_tiny_4"
            android:paddingTop="@dimen/margin_tiny_4">

            <TextView
                android:id="@+id/tv_friend_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0人"
                android:textColor="@color/text_color_black_1"
                android:textSize="@dimen/textSize_m_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好友数"
                android:textColor="@color/text_color_black_2"
                android:textSize="@dimen/textSize_m_14" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divide_line" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_tiny_4"
            android:paddingTop="@dimen/margin_tiny_4">

            <TextView
                android:id="@+id/tv_friend_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0书券"
                android:textColor="@color/text_color_black_1"
                android:textSize="@dimen/textSize_m_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取奖励"
                android:textColor="@color/text_color_black_2"
                android:textSize="@dimen/textSize_m_14" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_friend_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="end"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/friend_no" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_middle_12"
                android:text="快去邀请哦"
                android:textColor="@color/text_color_black_3" />
        </LinearLayout>

        <com.zhangwan.app.recyclerview.RecyclerView
            android:id="@+id/rv_friend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>
