<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?selectableItemBackground"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_bookimg"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        tools:background="@color/colorPrimary_04"
        android:layout_marginBottom="@dimen/margin_10"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_bookimg"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_toRightOf="@+id/iv_bookimg"
        tools:text="风行前六"
        android:textColor="@color/text_color_333333"
        android:textSize="@dimen/textSize_m" />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title"
        android:layout_below="@+id/title"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/iv_bookimg"
        tools:text="前六前六风行前六风行前六风行前六风行前六前六风行前六风行前六风行前六风行前六"
        android:textColor="@color/text_color_666"
        android:textSize="@dimen/textSize_s" />

    <TextView
        android:id="@+id/descrite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title"
        android:layout_alignRight="@+id/read"
        android:layout_below="@+id/content"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_toRightOf="@+id/iv_bookimg"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.1"
        android:maxLines="2"
        android:text="六月  50万字"
        android:textSize="@dimen/textSize_xs" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/descrite"
        android:layout_below="@+id/content"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/read"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="乡村"
            android:textColor="@color/orange"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@drawable/textview_read_btn_orange_stroke_bg"
            android:textSize="@dimen/textSize_xs" />

    </LinearLayout>

    <View
        style="@style/item_line"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
