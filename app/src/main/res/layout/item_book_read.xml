<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_showbook"
    android:layout_width="match_parent"
    android:background="?android:selectableItemBackground"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_showbook_img"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_marginBottom="@dimen/margin_middle_12"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_showbook_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_showbook_img"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_color_black_1"
        android:textSize="@dimen/textSize_m_14" />

    <TextView
        android:id="@+id/tv_showbook_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_showbook_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/margin_tiny_4"
        android:layout_toRightOf="@+id/iv_showbook_img"
        android:textColor="@color/main"
        android:textSize="@dimen/textSize_s_12" />

    <TextView
        android:id="@+id/tv_showbook_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_showbook_auto"
        android:layout_marginBottom="@dimen/margin_middle_12"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/margin_middle_12"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_showbook_img"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="3"
        android:textColor="@color/text_color_black_2"
        android:textSize="@dimen/textSize_s_12" />

    <TextView
        android:id="@+id/read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_10"
        android:background="@drawable/button_green_without_solid_selector"
        android:paddingBottom="@dimen/margin_tiny_4"
        android:paddingLeft="@dimen/margin_small_8"
        android:paddingRight="@dimen/margin_small_8"
        android:paddingTop="@dimen/margin_tiny_4"
        android:text="立即阅读"
        android:textColor="@color/main"
        android:textSize="@dimen/textSize_m_14" />

    <View
        style="@style/item_line"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
