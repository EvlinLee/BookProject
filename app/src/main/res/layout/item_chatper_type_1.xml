<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/selector_touch"
    android:foreground="?android:selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_chatper_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_middle_12"
            android:layout_weight="5.5"
            android:gravity="center_vertical"
            android:textColor="@color/read_chatper_textcolor_2"
            android:textSize="@dimen/textSize_s_12"
            tools:text="第一章 重生少年时" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_item_chatper_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_middle_12"
                android:text="免费"
                android:textColor="@color/read_chatper_textcolor"
                android:textSize="@dimen/textSize_s_12"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_item_chatper_nofree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_middle_12"
                android:src="@drawable/icon_chatper_suo"
                android:textColor="@color/read_chatper_textcolor"
                android:textSize="@dimen/textSize_s_12"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_item_chatper_nofree_deblock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_middle_12"
                android:src="@drawable/icon_chatper_deblock"
                android:textColor="@color/read_chatper_textcolor"
                android:textSize="@dimen/textSize_s_12"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <View
        style="@style/item_line"
        android:layout_alignParentBottom="true" />
</RelativeLayout>