<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_bsbanner"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_marginLeft="15dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_bsbanner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_middle_12"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_m_14"
            tools:text="近身狂兵" />

        <TextView
            android:id="@+id/tv_bsbanner_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_middle_12"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:maxLines="3"
            android:paddingTop="@dimen/margin_tiny"
            android:textColor="@color/text_color_8da2c1"
            android:textSize="@dimen/textSize_xs"
            tools:text="哈哈哈哈哈哈" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_reading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_middle_12"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text_color_8da2c1"
                android:textSize="@dimen/textSize_xs"
                tools:text="以阅读至第三章" />

            <TextView
                android:id="@+id/go_to_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:drawablePadding="@dimen/margin_tiny"
                android:drawableRight="@drawable/read_arrow"
                android:maxLines="1"
                android:padding="@dimen/margin_middle_12"
                android:text="继续阅读"
                android:textColor="@color/text_color_8da2c1"
                android:textSize="@dimen/textSize_xs" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
